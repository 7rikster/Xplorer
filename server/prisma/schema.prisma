

generator client {
    provider = "prisma-client-js"
  }
  
  datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
  }
  
  
  model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    userName String @unique 
    name String
    email String @unique
    firebaseId String @unique
    photoUrl String
  
    role Role

    userTrips   UserTrip[]
  
  }
  
  enum Role {
    CLIENT
    ADMIN
  }
  
  
  enum TypeofPlace{
    DESTINATION
    EVENT
    HOTEL
    RESTAURANT
  }
  
  model Destination{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    placeId String @unique
    name String
    photoUrl String
    publicId String
    rating Int
    location String
  }

  model Hoarding{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    placeId String @unique
    name String
    photoUrl String
    publicId String
    location String
    description String
  }

  model AdminTrip{
    id String @id @default(auto()) @map("_id") @db.ObjectId

    createdAt DateTime

    tripDetail String
    imageUrls String[]
    city String
    country String
    groupType String
    budget String
  }

  model UserTrip{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    userId String @db.ObjectId
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime

    tripDetail String
    imageUrls String[]
  }